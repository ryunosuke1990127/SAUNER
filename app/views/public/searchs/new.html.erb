<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
   <main>
       <%= form_with url: search_search_sauna_path, method: :GET do |f| %>
       <div class= "container">
         <div class="row">
           <div class="mx-auto">
              <h1>絞込み条件を選択してください</h1>

              <div class="row">
                <div class="col-md-4">金額</div>
                <div class="col-md-5"><%= f.text_field :price%>円未満</div>
              </div>

              <div class="row">
                <div class="col-md-4">所在地</label></div>
                <div class="col-md-5"><%= f.text_field :location%></div>
              </div>
                <div class="sm4"><%= f.submit "表示する",class: 'btn btn-success'%>
              <!--どの地域のサウナ情報なのかを識別するために地域情報を渡す-->
              <%=f.hidden_field :region_id,value: @region_id %>
        <% end %>
            </div>
          </div>
        </div>
    </main>
  </body>
</html>

